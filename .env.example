# ============================================
# BASE DE DATOS POSTGRESQL (REQUERIDO)
# ============================================

# Opción 1: PostgreSQL Local
DATABASE_URL=postgresql://usuario:password@localhost:5432/nutricion_carolina

# Opción 2: Neon Cloud PostgreSQL (recomendado para producción)
# DATABASE_URL=postgresql://usuario:password@ep-xxx.region.aws.neon.tech/nutricion?sslmode=require

# Variables individuales (se extraen automáticamente de DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGUSER=usuario
PGPASSWORD=password
PGDATABASE=nutricion_carolina

# ============================================
# SESIONES Y SEGURIDAD (REQUERIDO)
# ============================================

# Genera un secreto seguro con:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=tu-secreto-aleatorio-muy-seguro-de-64-caracteres-minimo-cambiar-en-produccion

# ============================================
# INTELIGENCIA ARTIFICIAL (OPCIONAL)
# ============================================

# Google Gemini 2.5 Flash - Generación de imágenes de comidas
# Obtén tu API key en: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=

# ============================================
# CONFIGURACIÓN DE SERVIDOR
# ============================================

# Entorno de ejecución
NODE_ENV=development

# Puerto del servidor (opcional, default 5000)
PORT=5000
